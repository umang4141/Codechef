#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n,k;
	    cin>>n>>k;
	    int sum=0;
	    
	    while(n--)
	    {
	        int a;
	        cin>>a;
	        sum=sum+a;
	       
	    }
	    if(sum%k==0)
	        cout<<"0"<<endl;
	       else
	       cout<<"1"<<endl;
	}
	return 0;
}
